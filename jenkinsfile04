pipeline {
    agent any  
    tools {
    maven 'localMaven'
    }
    stages {
        stage('Clone Codebase') {
            steps {
                echo 'Clone github repos'
                git 'https://github.com/ThomasCaz/maven-project.git'
            }
        }
        stage('Compile') {
            steps {
                withMaven(maven:'localMaven')
                {
		bat "mvn compile"
                    // sh "mvn compile"
                }
            }
        }
        stage('Test') {
            steps {
                withMaven(maven:'localMaven')
                {
                    bat "mvn test"
                    // sh "mvn test"
                }
            }
        }
        stage('Build') {
            steps {
                withMaven(maven:'localMaven')
                {
                    bat "mvn -B -DskipTests clean package"
                    // sh "mvn -B -DskipTests clean package"
                }
            }
        }
	stage('Analyse and send Results to Sonar') {
            steps {
                withSonarQubeEnv(installationName: 'LocalSonar', credentialsId:'token4Sonar')
                {
                    bat "mvn -B -DskipTests clean package sonar:sonar"
                    // sh "mvn -B -DskipTests clean package sonar:sonar"
                }
            }
        }
    }
}
